driverClassName=com.mysql.cj.jdbc.Driver

#URL连接数据库的URL，其中travel（以下面例子来说）为连接的数据库，后面的参数可不改但不删
url=jdbc:mysql://localhost:3333/JavaWeb?rewriteBatchedStatements=true&characterEncoding=utf-8

#安装mysql时候设置的用户与密码
username=root
password=XHJxhj123.com

#初始化物理连接的个数
initialSize=5

#min idle connection size最小空余连接数
minIdle=5

#最大连接池数量
maxActive=50

#获取连接时最大等待时间(ms)
maxWait=3000

#用来检测连接是否有效的sql
validationQuery=SELECT 1

#保证安全性！
testWhileIdle=true
